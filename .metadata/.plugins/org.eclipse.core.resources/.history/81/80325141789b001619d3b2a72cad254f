#ifndef RF_NODE_H_
#define RF_NODE_H_


#define     MAX_NUMBER_OF_NODES                  16
#define     LE50_SERIAL_NUMBER_SIZE              11
#define     RF_NODE_TEMP_CHANNELS                2
#define     RF_NODE_DOOR_CHANNELS                2

typedef enum APP_ID{
	APP_ID_DOOR_SENSOR = 1,
	APP_ID_TEMP_SENSOR,
	APP_ID_TRAILER_IDENT
}APP_ID_T;

typedef struct RF_NODE{
	APP_ID_T app_id;
	uint16_t temperature[RF_NODE_TEMP_CHANNELS];
	uint16_t bat_voltage;
	uint16_t node_number;
	uint8_t rssi;
	char node_id[LE50_SERIAL_NUMBER_SIZE];
	bool door_status[RF_NODE_DOOR_CHANNELS];
	bool isOk;
	struct RF_NODE *next_node;
}RF_NODE_T;

int  rf_search_node(char *node_id);
bool rf_add_node(RF_NODE_T * node);
bool rf_remove_node(char *node_id);


#endif /* RF_NODE_H_ */
