typedef struct LINE_INFO{
	LPC_USART_T *p_uart;
	RINGBUFF_T *p_ringBuffer;
	char *p_outBuffer;
	uint16_t u16_outBufferSize;
    char *p_startCharArray;
    uint8_t u8_startCharArraySize;
    char *p_endCharArray;
    uint8_t u8_endCharArraySize;
	uint16_t u16_timeout;
}LINE_INFO_T;
