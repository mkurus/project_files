void Process_Task(void)
{
	uint8_t ctrl_reg1;
	char printBuf[128];
	char data[] = {0x40};

	while(1){

    	if(!GsmTask())
    		break;
		CAN_Task();
		GpsTask();
		StatusTask();
		OfflineTask();
		TempSensor1Task();
		TempSensor2Task();
		DebugPortTask();
		Rf_Task();
	}

}
